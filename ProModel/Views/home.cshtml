@model Umbraco.Web.Models.ContentModel
@{
    Layout = "WebBase.cshtml";

    var title = Model.Content.Value<string>("title");
    var subTitle = Model.Content.Value<string>("subTitle");
    var photoTitle1 = Model.Content.Value<string>("photoTitle1");
    var photoSubT1 = Model.Content.Value<string>("photoSubT1");
    var photoTitle2 = Model.Content.Value<string>("photoTitle2");
    var photoSubT2 = Model.Content.Value<string>("photoSubT2");
    var photo1 = Model.Content.Value<IPublishedContent>("photo1");
    var photo2 = Model.Content.Value<IPublishedContent>("photo2");
    var photo3 = Model.Content.Value<IPublishedContent>("photo3");
    var photo4 = Model.Content.Value<IPublishedContent>("photo4");
    var photo5 = Model.Content.Value<IPublishedContent>("photo5");
    var photo6 = Model.Content.Value<IPublishedContent>("photo6");
    var myUser = System.Web.Security.Membership.GetUser();
}

@* the fun starts here *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Explorer</title>
    <meta name="description" content="Explorer Website.">
    <meta name="keywords" content="The Explorer website.">

    <link href="https://fonts.googleapis.com/css?family=Abel" rel="stylesheet">

    <link href="~/css/styles-merged.css" rel="stylesheet" />

    <link href="~/css/style.min.css" rel="stylesheet" />

    <link href="~/css/custom.css" rel="stylesheet" />
    <script src="~/scripts/html5shiv.min.js"></script>
    <script src="~/scripts/vendor/respond.min.js"></script>
</head>
<body>
    
    <div class="probootstrap-section">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 mb40">
                    <h2>@title</h2>
                    <p>@subTitle</p>
                </div>
            </div>
            <div class="row probootstrap-gutter16">
                <div class="col-md-4 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo1.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>@photoTitle1</h2>
                            <p>@photoSubT1</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-8 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo2.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>@photoTitle2</h2>
                            <p>@photoSubT2</p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row probootstrap-gutter16">
                <div class="col-md-5 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo3.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>Earthly Clay</h2>
                            <p>Landscape</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-3 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo4.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>Man Captured</h2>
                            <p>Landscape</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo5.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>Mountain with pines</h2>
                            <p>Landscape</p>
                        </div>
                    </a>
                </div>
            </div>
            <div class="row probootstrap-gutter16">
                <div class="col-md-8 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(@photo6.Url);">
                        <div class="probootstrap-photo-details">
                            <h2>Mountains</h2>
                            <p>Landscape</p>
                        </div>
                    </a>
                </div>
                <div class="col-md-4 probootstrap-animate" data-animate-effect="fadeIn">
                    <a  class="img-bg" style="background-image: url(/img/img_6.jpg);">
                        <div class="probootstrap-photo-details">
                            <h2>Beautiful Sunset</h2>
                            <p>Landscape</p>
                        </div>
                    </a>
                </div>
            </div>

        </div>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-chevron-thin-up"></i></a>
    </div>
    <script src="~/scripts/scripts.min.js"></script>

    <script src="~/scripts/main.min.js"></script>

    <script src="~/scripts/custom.js"></script>
</body>
</html>

